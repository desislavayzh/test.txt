Is this what you're trying to do:

function createDimondShape(size) {
  var stuff = "";
  for (var i = 1; i <= size; i++) {
    for (var s = size - 1; s >= i; s--) {
      stuff += (" ");
    }
    for (var j = 1; j <= i; j++) {
      stuff += ("* ")
    }
    stuff += "\n";
  }
  if (i == size + 1) {
    for (var i = 1; i <= size - 1; i++) {
      for (var s = 1; s <= i; s++) {
        stuff += (" ");
      }
      for (j = i; j <= size - 1; j++) {
        stuff += ("* ");
      }
      stuff += "\n";
    }
  }
  document.getElementById("figure").innerHTML = stuff;
}
createDimondShape(5);
<pre id="figure"></pre>
